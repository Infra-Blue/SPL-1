{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceFolder}/Assets/*.cpp",
				"${workspaceFolder}/Assets/Containers/*.cpp",
				"${workspaceFolder}/Engine/*.cpp",
				"-o",
				"${workspaceFolder}/a.out",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/g++",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		}
	]
}